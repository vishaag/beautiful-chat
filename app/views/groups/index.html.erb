<% provide(:title, 'All Groups') %>
<h1>Groups</h1>
<%= link_to '<i style="display:block ; text-align:center"
class="glyphicon glyphicon-plus center-align"></i>'.html_safe, new_group_path %>


<ul class="users">
  <% @groups.each do |group|  %>
    <li>
      <%= link_to group.name, group_messages_path(group.id) %>
      <%= "  |  " + group.group_type.to_s %>
    </li>
  <% end %>
</ul>
